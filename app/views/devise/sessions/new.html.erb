<div class="users">
<h1>Log in</h1>
<div class="container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'field' %>
  </div>

  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'field' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="cadre-bouton">
    <%= f.submit "Log in", :class => 'bouton' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
