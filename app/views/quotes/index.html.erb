<div class="grid">

  <% @quotes.each do |quote| %>

    <div class="grid-item , card ">

        <div class="button-admin">
          <% if can? :destroy, quote %>
            <%= link_to quote, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="fa fa-trash" aria-hidden="true"></i>
            <% end %>
          <% end %>
          <% if can? :update, quote %>
            <%= link_to edit_quote_path(quote) do %>
              <i class="fa fa-pencil" aria-hidden="true"></i>
            <% end %>
          <% end %>
        </div>

        <div class="quotes">
            <p>"<%= quote.quote %>"</p>
        </div>

        <div class="under">
          <h4>By <%= quote.autor %></h4>
          <div class="like">
            <%= link_to like_quote_path(quote), :class => "love", method: :put do%>
              <i class="fa fa-heart-o" aria-hidden="true"></i><%= quote.get_upvotes.size %>
            <% end %>
            <%= link_to dislike_quote_path(quote), :class => 'like', method: :put do %>
              <i class="fa fa-times" aria-hidden="true"></i><%= quote.get_downvotes.size %>
            <% end %>
          </div>
        </div>
  </div>
<% end %>
<script>
  $('.grid').packery({
    itemSelector: '.grid-item',
    percentPosition: true,
    gutter: 6
  });
</script>
<script>
$( document).ready(function() {
    $('.love').click(function(){
$(this).find('fa fa-heart-o').toggleClass('fa fa-heart-o fa fa-heart');
$(this).find('i.fa').removeClass('fa-heart-o').addClass('fa-heart');
    })
});


</script>
</div>
